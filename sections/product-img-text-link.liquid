  <div class="wrapper">
<div class="product-item">
  {% for block in section.blocks %}
  <div class="product-item-bg">
    {% if block.settings.image %}
    <a class="mb-btn" href="{{ block.settings.link}}"><div class="itemimg"><img  src="{{ block.settings.image |img_url: 'master' }}" alt=""/></div></a>
    {% endif %}

    <div class="item-text-wrapper">
      {% if block.settings.title %}
      <h1 class="itemtitle">{{ block.settings.title }}</h1>
      {% endif %}

      {% if block.settings.text %}
      <div class="itemtext">{{ block.settings.text }}</div>
      {% endif %}

      {% if block.settings.btn %}
      <a class="btn lg-btn" href="{{ block.settings.link}}">{{ block.settings.btn }}</a>
      {% endif %}
    </div>
    
    <div class="item-text-wrapper-hover">
      {% if block.settings.title %}
      <h1 class="itemtitle">{{ block.settings.title }}</h1>
      {% endif %}

      {% if block.settings.text %}
      <div class="itemtext">{{ block.settings.text }}</div>
      {% endif %}

      {% if block.settings.btn %}
      <a class="btn lg-btn" href="{{ block.settings.link}}">{{ block.settings.btn }}</a>
      {% endif %}
    </div>

  </div>

  {% endfor %}
  </div>
</div>

<style>
  .product-item{ display: flex; justify-content: space-between; flex-wrap: wrap; margin: 2% 4%; }
  .product-item-bg{background: #F4F4F4;  flex: 0 1 49%;position: relative;  overflow: hidden;}
  .product-item-bg .itemimg{text-align: center;}
  .product-item-bg .itemimg img { max-width:360px;width:100%;}
  .product-item-bg .item-text-wrapper{ padding:1vw 2vw 2vw; position: relative; opacity: 1; transition: opacity 0.5s;}
  .product-item-bg .item-text-wrapper-hover .itemtext{margin-bottom: 20px;}
  .product-item-bg .item-text-wrapper .itemtext{ margin-bottom: 20px;text-overflow: -o-ellipsis-lastline; overflow: hidden; 
    text-overflow: ellipsis; display: -webkit-box;  -webkit-line-clamp: 1; line-clamp: 1; -webkit-box-orient: vertical;  }
  @media screen and (min-width:1026px){
    .item-text-wrapper-hover{ position: absolute; bottom: -100%; transition: bottom 0.5s;}
    .product-item-bg:hover .item-text-wrapper{  opacity: 0;}
    .product-item-bg:hover .item-text-wrapper-hover{bottom:0;}
    .product-item-bg:hover .item-text-wrapper-hover{background: rgba(0, 0, 0, 0.5); position: absolute; bottom: 0;left: 0; padding: 3vw 4vw;}
    .product-item-bg:hover .itemtitle{ color:#fff;}
    .product-item-bg:hover .item-text-wrapper-hover .itemtext{color:#fff;}
    .product-item-bg .lg-btn:hover{background-color: #fff; color: #de5322;}
  }

  @media screen and (max-width:1025px){
    .product-item-bg .item-text-wrapper-hover{ display:none;}
    .product-item-bg .item-text-wrapper .itemtext{-webkit-line-clamp: initial;line-clamp: initial;}
  }

  @media screen and (max-width:768px){
    .product-item-section .wrapper{ padding:0;}
    .product-item{ margin:0;}
    .product-item-bg{flex: 0 1 100%; display: flex; flex-wrap: wrap;}
    .product-item-bg .item-text-wrapper{background: rgba(0, 0, 0, 0.5);padding:8vw; width: 100%; order: 2;}
    .product-item-bg .itemtitle{ color:#fff; font-size: 1.5em;}
    .product-item-bg .item-text-wrapper .itemtext{ color:#fff;}
    .mb-btn{ width: 100%; order: 1;}
  }
</style>

